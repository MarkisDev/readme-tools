<!-- html file for image/joke -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {variant: 'compact'}); %>
    <style>
        .container {
            position: relative;
            text-align: center;
            color: white;
        }
        .centered {
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translate(-50%, 0);
            width: 400px;
            font-size: 24px;
            font-weight: 600;
        }
        .textbox {
            background-color: rgba(255, 255, 255, 0.4);
            -webkit-backdrop-filter: blur(5px);
            backdrop-filter: blur(5px);
        }
    </style>
</head>
<body>  
    <main>
        <div class="container">
            <img src="<%= image %>" style="width:400px;">
            <div class="centered textbox">
                <p> <%= joke %> </p>
            </div>
        </div>
    </main>
</body>
</html>